#!/usr/bin/env ruby

puts "Installing freetds into #{ARGV[0]}/vendor/freetds"

`mkdir -p #{ARGV[1]}`
`curl ftp://ftp.astron.com/pub/freetds/stable/freetds-stable.tgz -s -o - | tar xzf - -C #{ARGV[1]}`
`cp -r #{ARGV[1]}/freetds-0.91 #{ARGV[0]}/freetds`

`cd #{ARGV[0]}/freetds; ./autgen.sh; ./configure --prefix=#{ARGV[0]} --disable-odbc --disable-apps --disable-server --disable-pool --enable-msdblib; make; make install`

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end