#!/usr/bin/env ruby

puts "Installing freetds into #{ARGV[1]}/vendor/freetds"
`mkdir -p #{ARGV[1]}/vendor/freetds`
`curl https://s3.amazonaws.com/firmhouse/freetds-0.tgz -o - | tar -xz -C #{ARGV[1]}/vendor/freetds -f -`

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end